{
    "root": true,
    "env": {
        "node": true
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "simple-import-sort"
    ],
    "overrides": [
        {
            "files": "*.ts",
            "parser": "@typescript-eslint/parser",
            "extends": [
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended"
            ]
        }
    ],
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": 2,
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error"
    }
}